#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
	/config/ssl

# copy
if [[ ! -e /config/aria2.conf ]]
then
  cp /aria2/aria2.conf.default /config/aria2.conf
fi

if [[ ! -e /config/aria2.session ]]
then
  touch /config/aria2.session
fi

if [[ ! -e /config/dht.dat ]]
then
  touch /config/dht.dat
fi

# permissions
chown -R abc:abc \
	/config \
	/aria2
chmod a+x /config
chmod a+x /aria2_sh